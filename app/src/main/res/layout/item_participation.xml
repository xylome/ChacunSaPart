<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/item_participation_actor"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/item_participation_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        ></View>
    <Button
        android:id="@+id/item_participation_minus_button"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="@string/button_minus"
        />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/item_participation_parts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_participation_whole_parts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginRight="3sp"

            />
            <TextView
                android:id="@+id/item_participation_decim_parts"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="7sp"

                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/item_participation_plus_button"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="@string/button_plus"
        />

</LinearLayout>