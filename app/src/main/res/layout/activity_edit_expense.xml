<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="placard.fr.eu.org.ui.EditGroupActivity"
    android:orientation="vertical"
    >

    <!--<android.support.design.widget.TextInputLayout-->
    <!--android:id="@+id/edit_group_name_layout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <!--<AutoCompleteTextView-->
    <!--android:id="@+id/edit_group_name_tv"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:hint="@string/edit_group_name"-->
    <!--android:layout_marginTop="45dp"-->
    <!--/>-->
    <!--</android.support.design.widget.TextInputLayout>-->

    <EditText
        android:id="@+id/edit_expense_name_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_expense_name"
        android:textSize="25sp"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/edit_expense_amount_tv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="@string/edit_expense_amount"
            android:textSize="20sp"
            android:singleLine="true"
            android:gravity="right"
            android:inputType="numberDecimal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/edit_expense_euro"
            android:layout_marginRight="5sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_expense_paid_by"
            />
        <Spinner
            android:id="@+id/edit_expense_payer_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>


    <ListView
        android:id="@+id/edit_expense_participations_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginBottom="16dp"
        >
        <Button
            android:id="@+id/edit_expense_ok_btn"
            android:layout_marginRight="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_ok"
            />
        <Button
            android:id="@+id/edit_expense_cancel_btn"
            android:layout_marginRight="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_cancel"
            />
    </LinearLayout>

</LinearLayout>

