<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="placard.fr.eu.org.chacunsapart">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission android:name="placard.fr.eu.org.chacunsapart.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="placard.fr.eu.org.chacunsapart.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>
        <service
            android:name="placard.fr.eu.chacunsapart.gcm.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="placard.fr.eu.chacunsapart.gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <activity
            android:name="placard.fr.eu.chacunsapart.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="placard.fr.eu.chacunsapart.ui.MyGroupsActivity"
            android:label="@string/app_name" />
        <activity
            android:name="placard.fr.eu.chacunsapart.ui.GroupActivity"
            android:label="@string/title_activity_group" />
        <activity
            android:name="placard.fr.eu.chacunsapart.ui.EditGroupActivity"
            android:label="@string/create_group" />
        <activity
            android:name="placard.fr.eu.chacunsapart.ui.EditExpenseActivity"
            android:label="@string/title_activity_edit_expense"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustNothing" />
        <activity
            android:name="placard.fr.eu.chacunsapart.ui.AddFriendActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustNothing"
            >
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="488563cbe3445880608477096c50d58ecd57acce" />
    </application>

</manifest>
